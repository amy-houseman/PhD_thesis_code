#!/bin/bash --login
#SBATCH -J AmyHouseman_addchromheaderback_nofirstcol
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p htc
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-135
#SBATCH --qos=maxjobs500

module purge
module load bcftools/1.16.0
module load parallel

# Set bash error trapping to exit on first error.
set -eu

TOOL=bcftools
EXOME_IDs_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/bcftools/input/alldataset_bestcov_IDS_removedE036_H_001
BCFTOOLSINPUTVCF=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/ALLVARIANTS/2.ensembl_vep_annotation/gunzip/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_allvariants_annotatedVEP.vcf
BCFTOOLSOUTPUTVCF=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/ALLVARIANTS/3.bcftools_original_norefcall_output_no_headers/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_allvariants_annotatedVEP_bcftoolssplitvcf.vcf
HEADERFILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/bcftools/input/chrom-vep-header_withqual_filter.txt
SAMPLENAMEHEADER=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/ALLVARIANTS/3.bcftools_original_norefcall_output_no_headers/samplenameheader/{}chrom-vep-headers.txt
BCFTOOLSANDHEADER=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/ALLVARIANTS/5.annotated_and_split_vcf_files_withonerowheaders/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_allvariants_annotatedVEP_bcftoolssplitvcf_withchromheader.vcf
NOFIRSTCOLUMN=/scratch/c.c21087028/Polyposis_Exome_Analysis_ALLDATASET_VCFs_BESTCOVERAGE/ALLVARIANTS/6.removed_first_empty_column/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_allvariants_annotatedVEP_bcftoolssplitvcf_withchromheader_nofirstcolumn.vcf

cd /scratch/c.c21087028/
sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "cp $HEADERFILE $SAMPLENAMEHEADER && cat $BCFTOOLSOUTPUTVCF >> $SAMPLENAMEHEADER && mv $SAMPLENAMEHEADER $BCFTOOLSANDHEADER && cut -f2- $BCFTOOLSANDHEADER > $NOFIRSTCOLUMN"
