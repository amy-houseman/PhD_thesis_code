#!/bin/bash --login
#SBATCH -J AmyHouseman_extractgenes
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p htc
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-135
#SBATCH --qos=maxjobs500

module load parallel
EXOME_IDs_FILE=/file/with/the/file/IDs/not/with/the/file/extensions/.txt
FILE_TO_CHANGE_IDCOL_TO_POSITION_COL=/path/to/file/needed/for/input/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_allvariants_annotatedVEP_bcftoolssplitvcf_withchromheader_nofirstcolumn.vcf
OUTPUT_ID_TO_POSITION_FILE=/path/to/file/needed/for/output/{}output_IDcolumn_into_position.vcf
EXOMEIDADDED_OUTPUT=/path/to/output/file/with/the/ID_position/column/{}allvariants_sampleID_position_added.vcf
EXOMEID={}

# Set bash error trapping to exit on first error.
set -eu

cd /scratch/c.c21087028/

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "awk -v OFS='\t' '\$2=\$3' $FILE_TO_CHANGE_IDCOL_TO_POSITION_COL > $OUTPUT_ID_TO_POSITION_FILE && awk -v OFS='\t' '{\$2=\"$EXOMEID\"\$2}1' $OUTPUT_ID_TO_POSITION_FILE > $EXOMEIDADDED_OUTPUT"
