#!/bin/bash --login
#SBATCH -J AmyHouseman_markduplicates
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p compute
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-104
#SBATCH --mem-per-cpu=128GB

module purge
module load parallel
module load openjdk
module load picard

# Set bash error trapping to exit on first error.
set -eu

EXOME_IDs_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/RAW_input/IDswithoutR1R2_JOB27
BWAMEM_SORTEDBAM=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/samtools/sort/{}PE_samtoolssorted_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam
PICARDMARKDUPLICATES_SORTEDBAM=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/picard/markduplicate/markedduplicates/{}PE_markedduplicates_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam
PICARDMARKDUPLICATE_METRICS=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/picard/markduplicate/markedduplicates/metrics/{}PE_markedduplicatesmetrics_GCA_000001405.15_GRCh38_no_alt_analysis_set.txt

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "java -jar picard.jar MarkDuplicates I=$BWAMEM_SORTEDBAM O=$PICARDMARKDUPLICATES_SORTEDBAM M=$PICARDMARKDUPLICATE_METRICS"
