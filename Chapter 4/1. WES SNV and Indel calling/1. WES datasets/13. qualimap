#!/bin/bash --login
#SBATCH -J AmyHouseman_qualimap
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p htc
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-104
#SBATCH --mem-per-cpu=128GB
#SBATCH --qos=maxjobs100

module purge
module load singularity
module load parallel
module load qualimap

# Set bash error trapping to exit on first error.
set -eu

TOOL=qualimap
EXOME_IDs_FILE=/file/with/the/file/IDs/not/with/the/file/extensions/.txt
SORTEDBAM=/path/to/the/sorted/bam/post/picard/markduplicates/{}PE_samtoolssorted_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam
QUALIMAPBAMQCOUTPUTDIR=/path/to/the/output/qualimap/directory/GCA_000001405.15_GRCh38_no_alt_analysis_set_qualimap_{}
QUALIMAPBAMQCOUTPUTFILE={}
BEDFILEGFF=/path/to/the/exome/panel/bed/file/Agilent-SureSelect-DNA-SureSelectXT-Human-All-Exon-V5-hg38-qualimap.bed #specific for each dataset:
#WGP E036# nextera-dna-exome-targeted-regions-manifest-v1.2-liftover-hg38.bed
#WGP E132# truseq-dna-exome-v1-2-hg38.bed
#WGP E218# truseq-dna-exome-v1-2-hg38.bed
#BGI# Agilent-SureSelect-DNA-SureSelectXT-Human-All-Exon-V5-hg38.bed
#Novogene# Agilent-SureSelect-XT-Reagent-Kit-Human-AllExon-V6-hg38.bed

MAKEDIRECTORYIDS=/path/to/temporary/directories/qualimap_{}

cd /scratch/c.c21087028/

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "$TOOL bamqc -bam $SORTEDBAM -gff $BEDFILEGFF -outdir $QUALIMAPBAMQCOUTPUTDIR -outfile $QUALIMAPBAMQCOUTPUTFILE -outformat pdf --java-mem-size=4G"
