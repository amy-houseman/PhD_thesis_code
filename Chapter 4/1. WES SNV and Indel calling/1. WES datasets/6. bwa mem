#!/bin/bash --login
#SBATCH -J AmyHouseman_bwamemJOB27
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-23
#SBATCH --time=72:00:00
#SBATCH --qos=maxjobs100
#SBATCH --partition=htc
#SBATCH --account=scw1581
#SBATCH --mem-per-cpu=128GB

module purge
module load parallel
module load samtools

# Set bash error trapping to exit on first error.
set -eu

EXOME_IDs_FILE=/file/with/the/file/IDs/not/with/the/file/extensions/.txt
HG38_REFERENCE=/path/to/reference/genome/file/GCA_000001405.15_GRCh38_no_alt_analysis_set.fna
TRIMMED_FORWARD_OUTPUT=/path/to/the/trimmed/fastq/forward/file/{}1.cutadapt-trimmed.fq.gz
TRIMMED_REVERSE_OUTPUT=/path/to/the/trimmed/fastq/reverse/file/{}2.cutadapt-trimmed.fq.gz
BWAMEM_SAM=/path/to/the/outputted/sam/file/{}PE_bwamem_GCA_000001405.15_GRCh38_no_alt_analysis_set.sam

#bwa mem for the alignment of the PE reads to the reference genome.
sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "bwa mem $HG38_REFERENCE $TRIMMED_FORWARD_OUTPUT $TRIMMED_REVERSE_OUTPUT > $BWAMEM_SAM"
