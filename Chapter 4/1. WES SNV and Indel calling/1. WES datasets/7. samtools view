#!/bin/bash --login
#SBATCH -J AmyHouseman_samtoolsview
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p compute
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-104
#SBATCH --time=72:00:00
#SBATCH --mem-per-cpu=128GB

module purge
module load singularity
module load parallel

# Set bash error trapping to exit on first error.
set -eu

EXOME_IDs_FILE=/file/with/the/file/IDs/not/with/the/file/extensions/.txt
BWAMEM_SAM=/path/to/sam/file/{}PE_bwamem_GCA_000001405.15_GRCh38_no_alt_analysis_set.sam
BWAMEM_BAM=/path/to/bam/file/{}PE_samtoolsview_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam

# SAM to BAM for PE reads
sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "samtools view -b $BWAMEM_SAM > $BWAMEM_BAM"
