#!/bin/bash --login
#SBATCH -J AmyHouseman_vep
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p compute
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-33
#SBATCH --time=12:00:00
#SBATCH --mem-per-cpu=128GB

INPUTVCF=/path/to/input/vcf/file/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set.vcf.gz
OUTPUTVCF=/path/to/output/ensembl/vcf/file/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set_annotatedVEP.vcf.gz
HG38REFERENCE=/path/to/file/with/human/reference/genome/andits/indexed/files/GCA_000001405.15_GRCh38_no_alt_analysis_set_refandindex/GCA_000001405.15_GRCh38_no_alt_analysis_set.fna

module load singularity

#CADD files: whole_genome_GRCh38_SNVs.tsv.gz and gnomad.genomes.r3.0.indel.tsv.gz were downloaded from https://krishna.gs.washington.edu/download/CADD/v1.6/GRCh38/
#Ensembl VEP singularity container was downloaded using https://www.ensembl.org/info/docs/tools/vep/script/vep_download.html#singularity

singularity exec /scratch/c.c21087028/ensembl-vep_latest.sif vep --input_file $INPUTVCF \
--output_file $OUTPUTVCF \
--format vcf \
--vcf \
--compress_output bgzip \
--species homo_sapiens \
--assembly GRCh38.p13 \
--fasta $HG38REFERENCE \
--offline \
--cache \
--dir_cache /path/to/ensembl/vep/containter/.vep/ \
--cache_version 107 \
--force \
--no_stats \
--everything \
--plugin CADD,/scratch/c.c21087028/ENSEMBL-VEP-PLUGGINS/ENSEMBL-CADD/whole_genome_GRCh38_SNVs.tsv.gz,/scratch/c.c21087028/ENSEMBL-VEP-PLUGGINS/ENSEMBL-CADD/gnomad.genomes.r3.0.indel.tsv.gz
