#!/bin/bash --login
#SBATCH -J AmyHouseman_deepvariantJOB27
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p htc
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-104
#SBATCH --time=12:00:00
#SBATCH --mem-per-cpu=128GB
#SBATCH --qos=maxjobs100

module purge
module load parallel
module load singularity

EXOME_IDs_FILE=/file/with/the/file/IDs/not/with/the/file/extensions/.txt
HG38_REFERENCE=/path/to/indexed/human/reference/genome/GCA_000001405.15_GRCh38_no_alt_analysis_set_refandindex/GCA_000001405.15_GRCh38_no_alt_analysis_set.fna
PICARDMARKDUPLICATES_SORTEDBAM=/path/to/markduplicated/sorted/bamfile/{}PE_markedduplicates_GCA_000001405.15_GRCh38_no_alt_analysis_set.bam

BED_REGIONS=/path/to/exome/bed/files/Agilent-SureSelect-DNA-SureSelectXT-Human-All-Exon-V5-hg38.bed #specific for each dataset:
#WGP E036# nextera-dna-exome-targeted-regions-manifest-v1.2-liftover-hg38.bed
#WGP E132# truseq-dna-exome-v1-2-hg38.bed
#WGP E218# truseq-dna-exome-v1-2-hg38.bed
#BGI# Agilent-SureSelect-DNA-SureSelectXT-Human-All-Exon-V5-hg38.bed
#Novogene# Agilent-SureSelect-XT-Reagent-Kit-Human-AllExon-V6-hg38.bed

OUTPUT_VCF=/path/to/outputted/vcf/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set.vcf.gz
OUTPUT_GVCF=/path/to/outputted/gvcf/{}PE_output_GCA_000001405.15_GRCh38_no_alt_analysis_set.g.vcf.gz
INTERMEDIATE_RESULTS=/path/to/outputted/intermediatefiles/{}PE_output_intermediate

# Set bash error trapping to exit on first error.
set -eu

cd /scratch/c.c21087028/

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "singularity run -B /usr/lib/locale/:/usr/lib/locale/ containers/deepvariant_1.3.0.sif /opt/deepvariant/bin/run_deepvariant --model_type=WES \
--ref=$HG38_REFERENCE \
--reads=$PICARDMARKDUPLICATES_SORTEDBAM \
--regions=$BED_REGIONS \
--output_vcf=$OUTPUT_VCF \
--output_gvcf=$OUTPUT_GVCF \
--intermediate_results_dir=$INTERMEDIATE_RESULTS"
